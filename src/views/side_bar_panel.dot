<div class="side_bar">

  <button class="side_bar__logo" {{= click(this.home, this) }}></button>
  <div class="side_bar__logo__limit"></div>
  <div {{= click(this.toggleResult, this) }} class="side_bar__result side_bar__item {{= this.isResultActive ? 'side_bar__item--active': ''}}">
    <div class="icon-icon_list side_bar__item__icon"></div>
    <div class="side_bar__item__text">{{= _('RESULTS', 'side bar') }}</div>
  </div>

  <div {{= click(this.toggleFavorite, this) }} class="side_bar__fav side_bar__item {{= this.isFaforiteActive ? 'side_bar__item--active' : ''}}">
    <div class="side_bar__fav__add">
      +1
    </div>
    <div class="icon-icon_star side_bar__item__icon"></div>
    <div class="side_bar__item__text">{{= _('FAVORITES', 'side bar') }}</div>
  </div>

</div>
