<div class="service_panel{{= this.isMobile ? ' service_panel_mobile' : '' }}{{= this.active ? ' service_panel--active' : ''}} {{= this.panelResizer ? this.panelResizer.getResizableClasses() : '' }}">

  <div class="service_panel__header {{= this.panelResizer ? this.panelResizer.HANDLE_CLASS : '' }}" {{= this.panelResizer ? this.panelResizer.renderResizerActions() : '' }}>

    <span class="favorite_panel__show_list">{{= _('Show Qwant Maps services',  'favorite panel') }}</span>

    <h3 class="service_panel__title">
      {{= _('Qwant Maps services', 'service panel') }}
    </h3>
  </div>

  {{? this.categories.length > 0 }}
  <div class="service_panel__categories">
    {{~ this.categories:category:index }}
      {{?
        !this.mustDeployCategories ||
        (this.mustDeployCategories && !this.isDeployed && index < 12) ||
        (this.mustDeployCategories && this.isDeployed)
      }}
        <button class="service_panel__category" type="button" {{= click(this.openCategory, this, category) }}>
          <div class="service_panel__category__icon" style="background: {{= category.backgroundColor }}">
            <span class="icon icon-{{= category.iconName }}"></span>
          </div>
          <div class="service_panel__category__title">{{= category.label }}</div>
        </button>
      {{?}}
    {{~}}

  </div>
  {{?}}

  <hr>
  <br>
  <div class="service_panel__actions">

    <button class="service_panel__action service_panel__item__direction" {{= click(this.openDirection, this) }}>
      <div class="service_panel__action__icon">
        <span class="icon-corner-up-right"></span>
      </div>
      <div class="service_panel__action__title">{{= _('Directions', 'service panel') }}</div>
    </button>

    <button class="service_panel__action service_panel__item__fav" {{= click(this.openFavorite, this) }}>
      <div class="service_panel__action__icon">
        <span class="icon-icon_star"></span>
      </div>
      <div class="service_panel__action__title">{{= _('Favorites', 'service panel') }}</div>
    </button>

  </div>

</div>