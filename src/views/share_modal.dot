<i class="icon-x modal__close" {{= click(this.close, this) }}></i>
<h2 class="modal__title">{{= _('Share favorite', 'share') }}</h2>

<span class="modal__subtitle">{{= _('Share link', 'share') }}</span>
<input id="share_url_data" value="{{= this.shareUrl }}" type="text"></input>
<button class="share__copy_link" {{= click(this.copy, this) }}>{{= _('COPY LINK' , 'share') }}</button>
<span id="share-copy-status" class="share__copy_status share__copy_status--hidden">{{= _('Link copied', 'share') }}</span>
<hr class="modal__hr">
<i class="share__icons icon-facebook"></i>
<a rel="noopener noreferrer" target="_blank" {{= this.openPopup('facebook') }} href="{{= this.facebookTemplate(this.shareUrl) }}" class="share__link">
  {{= _('SHARE ON FACEBOOK', 'share') }}
</a>
<hr class="modal__hr">
<i class="share__icons icon-twitter"></i>
<a rel="noopener noreferrer" target="_blank" {{= this.openPopup('twitter') }} href="{{= this.twitterTemplate(this.shareUrl) }}" class="share__link">
  {{= _('SHARE ON TWITTER', 'share') }}
</a>
