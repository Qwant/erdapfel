<div class="poi_popup">
  <h1 class="poi_popup__title">{{= this.htmlEncode(this.poi.name) }}</h1>
  <h3 class="poi_popup__category">{{= this.category }}</h3>
  <div>
  {{? this.reviews }}
    <div class="poi_popup__review">

      {{~ [...Array(5)]:star:k }}
        <span class="icon-icon_star{{= k+1 <= this.reviews.global_grade ? '-filled' : ''}}"></span>
      {{~}}

      <span class="panel__note__review_count">
        {{= this.reviews.total_grades_count }} {{= _n('review', 'reviews', this.reviews.total_grades_count) }}
      </span>
    </div>

  {{?? this.opening && this.opening.days }}
    <span class="poi_popup__opening">
    {{? this.opening.isTwentyFourSeven }}
      {{= _('Open 24/7', 'hour block popup') }}
    {{??}}
      {{= _(this.opening.status.msg) }} {{? this.opening.nextTransition }} - {{= _('until {nextTransitionTime}', 'hour panel', {nextTransitionTime : this.opening.nextTransition})  }}{{?}}
    {{?}}
    </span>
    <div class="poi_popup__title__hour__circle" style="background:{{= this.opening.status.color }}"></div>
  {{?? this.address}}
    <span class="poi_popup__address">{{= this.htmlEncode(this.address) }}</span>
  {{?}}
  </div>
</div>
